<view class="personalContainer">
  <view class="user-section">
    <image class="bg" src="https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=2390396602,1684436412&fm=26&gp=0.jpg"></image>
    <view class="user-info-box" bindtap="toUserInfo">
      <view class="portrait-box">
        <image class="portrait" src='{{userInfo.avatarUrl?userInfo.avatarUrl:"/static/images/personal/missing-face.png"}}'></image>
      </view>
      <view class="info-box">
        <text class="username">{{userInfo.nickName?userInfo.nickName: '游客'}}</text>
        <view class="tro">{{userInfo.intro?userInfo.intro: ''}}</view>
      </view>
      
    </view>

    <view class="vip-card-box">
      <image class="card-bg" src="/static/images/personal/vip-card-bg.png" mode=""></image>
      <view class="b-btn">
        立即开通
      </view>
      <view class="tit">
        <!-- 会员图标-->
        <text class="iconfont icon-huiyuan-"></text>
        慧停者
      </view>
      <text class="e-m">smartParking Union</text>
      <text class="e-b">开通会员,优先预约</text>
    </view>
  </view>

  <view
      class="cover-container"
      bindtouchstart="handleTouchStart"
      bindtouchmove="handleTouchMove"
      bindtouchend="handleTouchEnd"
      style="transform: {{coverTransform}}; transition: {{coveTransition}}">
    <image class="arc" src="/static/images/personal/arc.png"></image>
    <!-- 个人中心导航 -->
    <view class="nav-section">
      <view class="nav-item"   hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-qianbao"></text>
        <text>我的钱包</text>
      </view>
      <view class="nav-item"  hover-class="common-hover"  hover-stay-time="50" bindtap="call">
        <text class="iconfont icon-xiuli1"></text>
        <text>车辆抢救</text>
      </view>
      
      <view class="nav-item"  hover-class="common-hover"  hover-stay-time="50">
        <text class="iconfont icon-huiyuanfuwu"></text>
        <text>会员服务</text>
      </view>
      <view class="nav-item" hover-class="common-hover"  hover-stay-time="50" bindtap="service">
        <button class="iconfont icon-kefu2" size="mini" plain style="border: 0 none" open-type="contact" bindcontact="service"></button>
        <text>客服</text>
      </view>
    </view>

    <!-- 个人中心列表 -->
    <view class="personalContent">
      <view class="cardList">
        <view class="card-item">
          <text class="title">车牌绑定</text>
          <text style="margin-left: 30rpx">{{userInfo.car}}</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title">车主认证</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title" bindtap="toOrder">我的消费记录</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item" bindtap="toLogin">
          <text class="title">手机绑定</text>
          <text class="more"> > </text>
        </view>
      </view>
    </view>
  </view>
</view>

