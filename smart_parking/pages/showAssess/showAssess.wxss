Page{
  height: 100%;
  width: 100%;
  background-color: #f0f0f0;
}

.header{
  width: 100%;
}

.header-sort{
  background-color: white;
  padding: 30rpx 40rpx;
  height: 20%;
}

.header-kind{
  width: 100%;
  /* height: 60rpx; */
  margin: 20rpx auto;
}

.header-kind text{
  box-sizing: border-box;
  margin-bottom: 20rpx;
  line-height: 60rpx;
}

.header-kind text text{
    display: inline-block;
    border: 1rpx solid skyblue;
    border-radius: 20rpx;
    width: 30%;
    line-height: 60rpx;
    text-align: center;
    margin-right: 20rpx;
    color: #FF8000;
    opacity: 0.7;
}


.header-all text{
  padding: 10rpx;
  display: inline-block;
  border: 1rpx solid gray;
  border-radius: 40rpx;
  margin-right: 35rpx;
  background-color: #F5F5F5;
}

.middle{
  margin-top: 20rpx;
  background-color: white;
}

.header-view {
  margin-top: 30rpx;
  float: right;
  padding-right: 20rpx;
}

.middle-header text:first-child::after{
  content: '|';
  margin:0  15rpx;
}

.middle-header::after{
    content: ' ';
    clear: both;
    display:block;
    height:0;
    visibility:hidden;
}

.middle-content{
  padding: 20rpx;
}

.middle-content .detitle{
  font-size: 25rpx;
  padding-top: 8rpx;
  opacity: 0.6;
}

.content-header{
    display: flex;
    height: 80rpx;
}

.middle-content .left{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin: auto 0;
}

.content-list{
  margin-bottom: 40rpx;
}

.content-list::after{
  content: '';
  border-bottom: 1rpx red solid;
  margin: 10rpx 0
}

.content-list .right{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
}

.right .title{
  color: #FF8000;
  font-weight: bold;
  font-size: 35rpx;
}

.contentItem{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  color: #DEE1E6;
}

.contentItem text{
  margin-top: 20rpx;
}

.content-text text{
  display: inline-block;
  width: 100%;
  word-wrap: break-word;
}

.content-image{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}


/* .showImg{
  height: 450rpx;
} */

.content-image text{
  margin: 10rpx;
}

.footer{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  color: gray;
  width: 100%;
}

.footer .footer-left{
  opacity: 0.7;
  font-size: 25rpx;
}


.iconpinglun, .icondianzan{
  margin-right: 20rpx;
}

.iconpinglun, .icondianzan ,.iconjubao{
  font-size: 28rpx;
  vertical-align: top;
}

.iconpinglun text:first-child, .icondianzan text:first-child{
  font-size: 23rpx;
}

.action{
  color: red;
  font-size: 33rpx !important;
}



.footer-content{
  position: fixed;
  bottom: 0rpx;
  z-index: 99;
  width: 100%;
  padding:20rpx;
  background-color: skyblue;
  opacity: 0.6;
}

.footer-content text{
  display: inline-block;
  width: 19%;
  margin-right: 30rpx;
}


.footer-content text:last-child{
  margin-right: 0 !important;
  margin-left: -10rpx;
}

.showBorder{
  display: inline;
  border-bottom: 1rpx solid gray;
}

.footer-action{
  padding: 20rpx;
  color: white;
  background-color: red;
  /* opacity: 0.7; */
  border-radius: 40rpx;
}