Page{
  width: 100%;
  height: 100%;
  background-color:#F1F3F4;
}

.userInfoContainer{
  width:100%;
  background-color: #fff;
  padding: 0 30rpx;
}

.userInfoContainer .header{
  width: 100%;
  height: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header image{
  width: 250rpx;
  height: 250rpx;
  border-radius: 250rpx;
  margin-top: 80rpx;
}

.header text{
  margin: 20rpx 0;
  color: orange;
  opacity: 0.8;
  margin-bottom: 60rpx;
}

.middle-item{
  line-height: 80rpx;
  border-top: 1rpx solid gray;
}

.middle-item text:first-child{
  margin-right: 80rpx;
}

.middle-item text:nth-child(3){
  color: gray;
  opacity: 0.9;
}

.middle-item text:nth-child(2){
  opacity: 0.7;
}

.middle-item text:last-child{
  float: right;
  margin-right: 10rpx;
}

.sex{
  margin-left: 58rpx;
}

.personsign{
  display: flex;
  align-items: center;
}

.personsign input{
  line-height: 80rpx;
  font-size: 28rpx;
  /* font-family: 楷体; */
  opacity: 0.6;
  width: 66%;
}

.edit-container{
  height: 570rpx;
  border-top: 1rpx solid gray;
}

.edit-header{
  margin-top: 20rpx;
  border: 1rpx solid skyblue;
  width: 100%;
  border-radius: 30rpx;
}

.edit-header text{
  width: calc(100%/7);
  display: inline-block;
  line-height: 80rpx;
  box-sizing: border-box;
  border-right: 1rpx solid gray;
  font-size: large;
  /* border-left: 1rpx solid gray; */
  text-align: center;
  /* border-radius: 30rpx; */
}

.edit-header text:last-child{
  border-right: 0;
}

.picker{
  display: inline-block;
  width: calc(100%/7);
  text-align: center;
  color: red;
  /* height: 60rpx; */
  box-sizing: border-box;
  font-size: large;
}

.action{
  background-color: skyblue;
}

.edit-content{
  margin-top: 20rpx;
  width: 100%;
  word-break: normal;
  border: 1rpx solid gray;
  border-radius: 30rpx;
  padding: 20rpx 20rpx 10rpx 32rpx;
}

.edit-content text{
  line-height: 50rpx;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 1rpx solid red;
  margin-bottom: 20rpx;
  margin-right: 10rpx;
}

.edit-content text:nth-child(9),.edit-content text:nth-child(18),
.edit-content text:nth-child(27),.edit-content text:nth-child(36){
  margin-right: 0;
}

.btn{
  border-radius: 50rpx;
  margin: 10rpx 270rpx;
}

.car{
  margin-left: 28rpx;
}